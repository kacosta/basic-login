<div>
  <h1 class="font-bold text-4xl">Sessions#new</h1>
  <% if @user.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Holy smokes! Something went wrong!</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: sessions_path do |form| %>
  
    <div class="mt-5">
      <%= form.label :email, class: "block" %>
      <%= form.email_field :email, class: "block w-full mt-1" %>
    </div>

    <div class="mt-5">
      <%= form.label :password, class: "block" %>
      <%= form.password_field :password, class: "block w-full mt-1" %>
    </div>

    <div class="mt-5">
      <%= form.submit "Sign Up", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to 'Forgot Password', new_password_reset_path %>
</div>
