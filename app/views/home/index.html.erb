<div>
  <h1 class="font-bold text-4xl">Home#index</h1>

  <div class="mt-5">
    <% if logged_in? %>
      <p class="text-lg">Welcome back, <%= current_user.email %></p>
      <%= link_to "Sign Out", session_path(current_user), data: { turbo_method: :delete }, class: "text-blue-500 underline" %>
    <% else %>
      <%= link_to "Sign Up", new_registration_path, class: "text-blue-500 underline" %>
      <%= link_to "Sign In", new_session_path, class: "text-blue-500 underline" %>
    <% end %>
  </div>
</div>
