<div>
  <h1 class="font-bold text-4xl">Password Resets#new</h1>

  <%= form_with model: @user, url: password_reset_path(token: @token_reset_param) do |form| %>
    <div class="mt-5">
      <%= form.label :password, class: "block" %>
      <%= form.password_field :password, required: true, class: "block w-full mt-1" %>
    </div>

    <div class="mt-5">
      <%= form.label :password_confirmation, class: "block" %>
      <%= form.password_field :password_confirmation, required: true, class: "block w-full mt-1" %>
    </div>

    <div class="mt-5">
      <%= form.submit "Reset Password", class: "bg-blue-500 text-white px-4 py-2 rounded cursor-pointer" %>
    </div>
  <% end %>
</div>
